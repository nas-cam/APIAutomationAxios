{
  "spec_dir": "./API-Automation/test-suites/**/*.js",
  "spec_files": [
    "**/*[sS]pec.?(m)js"
  ],
  "helpers": [
    "helpers/**/*.?(m)js"
  ],
  "reporters": [
    {
      "name": "jasmine-spec-reporter",
      "options": {
        "prefixes": {
          "success": "✅  ",
          "failure": "❌  ",
          "pending": "🕓  "
        }
      }
    }
  ],
  "env": {
    "stopSpecOnExpectationFailure": false,
    "random": true
  }
}
